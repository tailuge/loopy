{
  "name": "loopy",
  "version": "0.0.1",
  "description": "AI-powered CLI assistant using Vercel AI SDK with tool calling capabilities",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "loopy": "./bin/loopy",
    "loopy-tui": "./bin/loopy-tui"
  },
  "scripts": {
    "prebuild": "./scripts/set-version.sh",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:tui": "node dist/tui.js",
    "typecheck": "tsc --noEmit",
    "test": "node --test dist/**/*.test.js",
    "test:tui": "vitest run",
    "verify": "node scripts/verify.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "cli",
    "llm",
    "gemini",
    "vercel-ai-sdk",
    "assistant",
    "tool-calling",
    "tui",
    "ink"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "config",
    "scripts/verify.js"
  ],
  "dependencies": {
    "@ai-sdk/google": "^3.0.29",
    "@openrouter/ai-sdk-provider": "^2.2.3",
    "ai": "^6.0.86",
    "bonjour-service": "^1.3.0",
    "fullscreen-ink": "^0.1.0",
    "ink": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.13.5",
    "@types/react": "^18.2.0",
    "happy-dom": "^20.6.3",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
