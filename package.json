{
  "name": "loopy",
  "version": "0.0.1",
  "description": "AI-powered CLI assistant using Vercel AI SDK with tool calling capabilities",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "loopy": "./bin/loopy",
    "loopy-tui": "./bin/loopy-tui"
  },
  "scripts": {
    "prebuild": "./scripts/set-version.sh",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:tui": "node dist/tui.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:tui": "vitest run",
    "verify": "node scripts/verify.js",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "cli",
    "llm",
    "gemini",
    "vercel-ai-sdk",
    "assistant",
    "tool-calling",
    "tui",
    "ink"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "config",
    "scripts/verify.js"
  ],
  "dependencies": {
    "@ai-sdk/google": "3.0.30",
    "@openrouter/ai-sdk-provider": "^2.2.3",
    "ai": "6.0.94",
    "bonjour-service": "^1.3.0",
    "fullscreen-ink": "^0.1.0",
    "ink": "^6.8.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "happy-dom": "^20.6.3",
    "ink-testing-library": "^4.0.0",
    "oxlint": "^1.49.0",
    "react-dom": "^19.2.4",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
